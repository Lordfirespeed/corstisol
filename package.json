{
  "name": "corstisol",
  "type": "module",
  "description": "CORS middleware for modern Node.js",
  "homepage": "https://github.com/lordfirespeed/corstisol#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/lordfirespeed/corstisol.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "module": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "keywords": ["tinyhttp", "node.js", "web framework", "web", "backend"],
  "author": "v1rtl",
  "license": "MIT",
  "files": ["dist/**"],
  "scripts": {
    "build": "tsup",
    "prebuild": "npm run type-check",
    "prepublishOnly": "npm run build",
    "test": "vitest run --silent",
    "test:debug": "vitest run",
    "test:coverage": "vitest run --silent --coverage --coverage.reporter=lcov",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@tinyhttp/app": "2.2.4",
    "@types/node": "^20.14.10",
    "@vitest/coverage-istanbul": "^2.0.2",
    "husky": "^9.0.11",
    "supertest-fetch": "^2.0.0",
    "tsup": "^8.1.0",
    "typescript": "~5.5.3",
    "vitest": "^2.0.2"
  },
  "dependencies": {
    "@tinyhttp/vary": "^0.1.3"
  }
}
